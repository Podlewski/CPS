<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" x:Class="View.MainWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Wizualizer Sygnału" Height="680" Width="1400">

    <Grid Background="#454545" >

        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="4.0*"/>
            <RowDefinition Height="2.0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.15*"/>
        </Grid.ColumnDefinitions>

        <!-- Wykres -->
        <Wpf:CartesianChart HorizontalAlignment="Right" Height="340" Width="970" Margin="20 10 20 20" VerticalAlignment="Top" Grid.ColumnSpan="4" Grid.Column="1" Grid.Row="1"
                            Series="{Binding Chart, UpdateSourceTrigger=PropertyChanged}" ToolTip="{x:Null}" ChartLegend="{x:Null}"/>

        <!-- Rodzaj sygnału -->
        <TextBlock Grid.Column="0" Grid.Row="1" Margin="20 5 0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Rodzaj sygnału:" FontSize="16px" VerticalAlignment="Top" Grid.RowSpan="2" Foreground="White" />
        <ListBox Grid.Column="0" Grid.Row="1" Margin="20 30 20 100" ItemsSource="{Binding SignalList}" SelectedItem="{Binding SelectedSignal}" FontSize="12px" Background="#232323" Foreground="White"/>

        <!-- Rysuj -->
        <Button Grid.Column="0" Grid.Row="1" Margin="20 320 20 0" FontSize="20px" Content="Rysuj wykres" Command="{Binding DrawChartCommand}" Foreground="White" Background="#FF343434" BorderBrush="#FF707070"  />

        <!-- Parametry (lewo) -->
        <StackPanel Grid.Column="1" Grid.Row="2">
            <TextBlock Margin="24 12 0 8" FontSize="14px" Foreground="White" Text="Amplituda (A):"/>
            <TextBlock Margin="24 4 0 8"  FontSize="14px" Foreground="White" Text="Czas początkowy (t_1):"/>
            <TextBlock Margin="24 4 0 8"  FontSize="14px" Foreground="White" Text="Czas trwania sygnału (d):"/>
            <TextBlock Margin="24 4 0 8"  FontSize="14px" Foreground="White" Text="Okres podstawowy (T):"/>
            <TextBlock Margin="24 4 0 8"  FontSize="14px" Foreground="White" Text="Współczynnik wypełnienia (k_w):"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="2">
            <TextBox Margin="0 12 0 5" Height="22px" Background="#343434" Foreground="White" Text="{Binding A_Amplitude}"/>
            <TextBox Margin="0 4 0 5"  Height="22px" Background="#343434" Foreground="White" Text="{Binding T1_StartTime}"/>
            <TextBox Margin="0 4 0 5"  Height="22px" Background="#343434" Foreground="White" Text="{Binding D_DurationOfTheSignal}"/>
            <TextBox Margin="0 4 0 5"  Height="22px" Background="#343434" Foreground="White" Text="{Binding T_BasicPeroid}"/>
            <TextBox Margin="0 4 0 5"  Height="22px" Background="#343434" Foreground="White" Text="{Binding Kw_DutyCycle}"/>
        </StackPanel>


        <!-- Parametry (prawo) -->
        <StackPanel Grid.Column="3" Grid.Row="2">
            <TextBlock Margin="24 12 0 8" FontSize="14px" Foreground="White" Text="Ts (Ts):"/>
            <TextBlock Margin="24 4 0 8"  FontSize="14px" Foreground="White" Text="Prawdopodobieństwo (p):"/>
        </StackPanel>

        <StackPanel Grid.Column="4" Grid.Row="2">
            <TextBox Margin="0 12 0 5" Height="22px" Background="#343434" Foreground="White" Text="{Binding Ts_TimeStep}"/>
            <TextBox Margin="0 4 0 5"  Height="22px" Background="#343434" Foreground="White" Text="{Binding P_Probability}"/>

        </StackPanel>


    </Grid>
</Window>
