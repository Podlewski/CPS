<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" x:Class="View.MainWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Wizualizer Sygnału" Height="580" Width="1200">

    <Grid Background="#454545" >

        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="2.8*"/>
            <RowDefinition Height="2.0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>

        <!-- Wykres -->
        <Wpf:CartesianChart HorizontalAlignment="Right" Height="260" Width="820" Margin="20 20 20 20" VerticalAlignment="Top" Grid.ColumnSpan="4" Grid.Column="1" Grid.Row="1"/>

        <!-- Rodzaj sygnału -->
        <TextBlock Grid.Column="0" Grid.Row="1" Margin="20 5 0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Rodzaj sygnału:" FontSize="16px" VerticalAlignment="Top" Grid.RowSpan="2" Foreground="White" />
        <ListBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Margin="20 30 20 130" ItemsSource="{Binding Signals}" SelectedItem="{Binding SelectedSignal}" FontSize="12px" Background="#232323" Foreground="White"/>

        <!-- Rysuj -->
        <Button Grid.Column="0" Grid.Row="2" Margin="20 100 20 20" FontSize="20px" Content="Rysuj wykres" Command="{Binding PlotCommand}" Foreground="White" Background="#FF343434" BorderBrush="#FF707070"  />

        <!-- Parametry (lewo) -->
        <StackPanel Grid.Column="1" Grid.Row="2">
            <TextBlock Margin="24 12 0 8" FontSize="14px" Foreground="White" Text="Amplituda (A):"/>
            <TextBlock Margin="24 4 0 8"  FontSize="14px" Foreground="White" Text="Czas początkowy (t1):"/>
            <TextBlock Margin="24 4 0 8"  FontSize="14px" Foreground="White" Text="Czas trwania sygnału (d):"/>
            <TextBlock Margin="24 4 0 8"  FontSize="14px" Foreground="White" Text="Okres podstawowy (T):"/>
            <TextBlock Margin="24 4 0 8"  FontSize="14px" Foreground="White" Text="Współczynnik wypełnienia (kw):"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="2">
            <TextBox Margin="0 12 0 5" Height="22px" Background="#343434" Foreground="White" Text="{Binding A}"/>
            <TextBox Margin="0 4 0 5"  Height="22px" Background="#343434" Foreground="White" Text="{Binding T1}"/>
            <TextBox Margin="0 4 0 5"  Height="22px" Background="#343434" Foreground="White" Text="{Binding D}"/>
            <TextBox Margin="0 4 0 5"  Height="22px" Background="#343434" Foreground="White" Text="{Binding T}"/>
            <TextBox Margin="0 4 0 5"  Height="22px" Background="#343434" Foreground="White" Text="{Binding KW}"/>
        </StackPanel>

        <!-- Parametry (prawo) -->


    </Grid>
</Window>
